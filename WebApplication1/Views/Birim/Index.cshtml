@using WebApplication1.Models
@model List<Birim>

<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>birim</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
            <td>@x.BirimID</td>
            <td>@x.BirimAd</td>
            <td><a href="/Birim/BirimSil/@x.BirimID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Birim/BirimGetir/@x.BirimID" class="btn btn-success">Güncelle</a></td>
            <td><a href="/Birim/BirimDetay/@x.BirimID" class="btn btn-info">Detaylar</a></td>
        </tr>
    }
</table>
<a href="/Birim/YeniBirim" , class="btn btn-primary">Yeni Birim</a>